<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/dp8"
    android:paddingHorizontal="@dimen/dp10"
    android:background="@color/color_f7">

    <com.ruffian.library.widget.REditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp6"
        app:background_normal="@color/white"
        app:corner_radius="@dimen/dp5"
        android:hint="Write your message" />


    <com.ruffian.library.widget.RTextView
        android:id="@+id/btn_finish"
        android:layout_height="@dimen/dp36"
        android:layout_width="@dimen/dp36"

        android:textColor="@android:color/black"
        app:background_normal="#1FD07B"
        android:padding="@dimen/dp10"
        app:icon_height="18dp"
        app:icon_width="18dp"
        app:icon_src_normal="@drawable/demo_arr_right"
        app:corner_radius="10dp"
        android:layout_marginStart="10dp"/>
</LinearLayout>